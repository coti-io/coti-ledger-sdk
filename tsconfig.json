{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "removeComments": false,
    "strict": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "watch": false,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@ledgerhq/errors": ["node_modules/@ledgerhq/errors/dist/index"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
